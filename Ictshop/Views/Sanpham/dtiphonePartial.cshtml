
    <div class="row">
  @*      <div class="bg-danger"><h3 style="padding:20px"> IPHONE </h3></div>*@
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6" style="margin-top: 60px">
                <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
