@using Ictshop.Models
@model Sanpham


@{
    ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />


    <div>
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Url.Content("~/HinhanhSP/" +@Model.Anhbia)"" alt="..." /></div>
                    <div class="col-md-6">
                        <h1 class="display-5 fw-bolder" style="color: #6666FF"> @Model.Tensp</h1>
                        <div class="fs-5 mb-5">
                            <table class="table" style="color: #FF6633; font-size:16px ">
                                <thead>
                                    <tr>

                                        <th scope="col">Bộ nhớ trong</th>
                                        <th scope="col">Số hàng còn</th>
                                        <th scope="col">Giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>

                                        <td>@Model.Bonhotrong</td>
                                        <td>@Model.Soluong</td>
                                        <td>@String.Format("{0:0,0}", @Model.Giatien) VNĐ</td>
                                    </tr>
                                </tbody>
                            </table>
            
                        </div>
                        <p class="lead " style="color: #003300 !important; font-size: 16px ">@Model.Mota</p>
                        <div class="d-flex">
                


                            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = Model.Masp, @strURL = Request.Url.ToString() }))
                            {
                                <i class="bi-cart-fill me-1"></i>
                                <input class="btn btn-outline-dark flex-shrink-0" type="submit" value="Mua ngay" id="bgnGioHang">
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
